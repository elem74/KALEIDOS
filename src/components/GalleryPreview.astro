---
import type { Gallery } from '../types/Gallery';

interface Props {
  galleries: Gallery[];
}

const { galleries } = Astro.props as Props;
---

<div class="gallery-previews">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    {galleries.map((gallery) => (
      <div key={gallery.id} class="gallery-preview">
        <img src={gallery.thumbnail} alt={gallery.title} class="w-full h-full object-cover" />
        <h3 class="text-lg font-bold mt-2">{gallery.title}</h3>
      </div>
    ))}
  </div>
</div>